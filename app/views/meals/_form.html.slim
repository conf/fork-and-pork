tr.info.add-meal.hidden
  td colspan="4"
    = simple_form_for meal, remote: true do |f|
      .col-md-4= f.input :details, as: :string, label: false, placeholder: 'Pork on a Fork'
      .col-md-2= f.input :calories, label: false, placeholder: 'Calories, e.g., 100'
      .col-md-4= f.input :created_at, as: :date_time_picker, label: false, placeholder: 'Date and time (optional)', wrapper_html: { data: { format: 'datetime' } }
      .col-md-2
        = f.submit 'Submit', class: 'btn btn-default'
        button.close type="button" data-dismiss="alert" aria-label="Close"
          span aria-hidden="true" &times;
